<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wishlist.wishlist.AdminListController">
   <children>
      <Label layoutX="500.0" layoutY="50.0" text="Control Panel">
         <font>
            <Font name="Old English Text MT" size="60.0" />
         </font>
      </Label>
      <AnchorPane prefHeight="700.0" prefWidth="394.0" style="-fx-background-color: #5AA1F5;">
         <children>
            <Label layoutX="20.0" layoutY="20.0" text="Please enter the game's name:" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Label>
            <Label layoutX="20.0" layoutY="164.0" text="Please enter the game's release year:" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Label>
            <Label layoutX="20.0" layoutY="308.0" text="Please enter the game's publisher:" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Label>
            <Label layoutX="20.0" layoutY="414.0" text="Please enter the game's Genre:" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="gameField" layoutX="20.0" layoutY="73.0" prefHeight="28.0" prefWidth="300.0" promptText="Game Name" style="-fx-border-image-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="yearField" layoutX="20.0" layoutY="217.0" prefHeight="28.0" prefWidth="300.0" promptText="Year of Release" style="-fx-border-image-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="publisherField" layoutX="20.0" layoutY="361.0" prefHeight="28.0" prefWidth="300.0" promptText="Creator Company" style="-fx-border-image-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="genreField" layoutX="20.0" layoutY="463.0" prefHeight="28.0" prefWidth="300.0" promptText="Genre" style="-fx-border-image-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </TextField>
            <Button fx:id="addButton" layoutX="70.0" layoutY="645.0" mnemonicParsing="false" onAction="#AddGameAction" style="-fx-background-color: transparent; -fx-border-width: 2; -fx-border-color: white; -fx-border-radius: 5;" text="Add Game to Wishlist" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Label fx:id="addLabel" layoutX="22.0" layoutY="600.0" prefHeight="24.0" prefWidth="360.0" textFill="RED">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Label>
            <Label layoutX="22.0" layoutY="525.0" text="Please enter the game's Price:" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="priceField" layoutX="20.0" layoutY="561.0" prefHeight="28.0" prefWidth="300.0" promptText="Price" style="-fx-border-image-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </TextField>
         </children>
      </AnchorPane>
      <Button fx:id="cancelButton" layoutX="633.0" layoutY="646.0" mnemonicParsing="false" onAction="#cancelButtonAction" style="-fx-background-color: transparent; -fx-text-fill: #A9A9A9; -fx-border-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;" text="Cancel" textFill="#868686">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <ListView fx:id="myListView" layoutX="402.0" layoutY="162.0" prefHeight="419.0" prefWidth="591.0" style="-fx-background-color: #5AA1F5;" />
      <Button fx:id="logoutButton" layoutX="626.0" layoutY="589.0" mnemonicParsing="false" onAction="#logoutButtonAction" style="-fx-background-color: transparent; -fx-text-fill: #A9A9A9; -fx-border-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;" text="Log Out" textFill="#868686">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
